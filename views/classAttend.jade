extends layout
block headExtra
  link(href='/css/classAttend.css', rel='stylesheet')
block content
  .container-fluid
    // Page Heading
    .row
      .col-lg-12
        h1.page-header
          | 출석 체크
          small  Check Attendance
    // /.row
    .row
      .col-lg-8.col-lg-offset-2
        .form-group
          form(action='/classAttend', method='post')
            .row
              .imgDiv
                p Latest image:
                .imgCover
                  if params.imageUrl
                    img(src=params.imageUrl)
                  else
                    img(src='/img/noimage.jpg')
            .row
              select.form-control(name='timeData')
                if params.timeDatas
                  each timeData in params.timeDatas
                    option(value={couNum: timeData.couNum, time: timeData.time}) #{timeData.timeString}
            .row.text-center
              button.btn.btn-lg.btn-primary(type='submit') Do Attend!
              
  script(src='/js/classAttend.js')
