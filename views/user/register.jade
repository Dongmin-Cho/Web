extends ../layout
block content
  .container-fluid
    // Page Heading
    .row
      .col-lg-12
        h1.page-header
          | 얼굴 등록
          small Face Register
    // /.row
    each img in params.imgs
      .row
        .userDiv.col-lg-8.col-lg-offset-2
          img.userPic(src='#{img}')
    .row
      .col-lg-offset-2
      .col-lg-8
        .form-group
        form#upload-image-form(action='/register', method='post', enctype='multipart/form-data')
          #image-preview-div
            label(for='exampleInputFile') Selected image:
            br
            img#preview-img(src='/img/noimage.jpg')
          .form-group
            input#file(type='file', name='uploadFile', required='')
          button#upload-button.btn.btn-lg.btn-primary(type='submit', disabled='') Upload image
        
  script(src='/js/register.js')
  script.
    !{params.js}
