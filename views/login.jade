html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.5, maximum-scale=1.5, user-scalable=no')
    title #{title}
    link(rel='stylesheet', href='/css/intro.css')
    script(src='js/jquery.js')
    script(src='js/intro.js')
  body
    .container
      .login-container
        #output
        .avatar
        .form-box
          form(action='/login', method='post')
            input(name='id', type='text', placeholder='ID' value='guest1' required autofocus)
            input(name='pw', type='password', placeholder='Password' value='1234' required)
            input(id='state', type='hidden', value='#{state}')
            button.btn.btn-info.btn-block.login(type='submit') Login
