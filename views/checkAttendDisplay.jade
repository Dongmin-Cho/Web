extends layout
block headExtra
  link(href='/css/checkAttendDisplay.css', rel='stylesheet')
block content
  .container-fluid
    // Page Heading
    .row
      .col-lg-12
        h1.page-header
          | 출석 체크
          small  Check Attendance 
    // /.row
    .row
      .col-lg-offset-2
      .col-lg-8
        .form-group
        form#upload-image-form(action='/checkAttend', method='post', enctype='multipart/form-data')
          #image-preview-div
            label(for='exampleInputFile') Selected image:
            br
            img#preview-img(src='/img/noimage.jpg')
          .form-group
            input#file(type='file', name='uploadFile', required='')
          button#upload-button.btn.btn-lg.btn-primary(type='submit', disabled='') Upload image
    form#doAttend(action='/checkAttend/attend', method='post')
      .row
        input.form-control(type='text', name='couNum', placeholder='Course Number')
        input.form-control(type='text', name='order', placeholder='Order')
        input.form-control(type='datetime', name='time')
      each user in params.users
        .row
          .userDiv.col-lg-8.col-lg-offset-2
            img.userPic(src='#{user.imgSrc}')
            p.id 학번 : #{user.id}
            p.name 이름 : #{user.name}
            div.checkbox
              label
                input.form-control(type='checkbox', name='usrNums', value=user.usrNum)
      .row
        input.form-control(type='submit')
  script(src='/js/register.js')
